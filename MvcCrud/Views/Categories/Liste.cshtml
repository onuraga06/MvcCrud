@model MvcCrud.Models.Dto.CategoriesModel

@{
	ViewBag.Title = "Liste";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kategori Liste</h2>
<div>
	<form method="get" action="/Categories/Liste" class="d-inline-flex">
		<input type="search" name"name" class="form-control" id="form-group-input" placeholder="Arama" />
		<button class="btn btn-success">Ara</button>
	</form>
</div>

<div class="row">
	<div class="col-md-12">
		<div class="accordion-collapse small">
			<table class="table table-hover">
				<thead>
					<tr class="table-active">
						<th>@Html.DisplayNameFor(m => m.categories.CategoryID)</th>
						<th>@Html.DisplayNameFor(m => m.categories.CategoryName)</th>
						<th>@Html.DisplayNameFor(m => m.categories.Description)</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model.cList)
					{
						<tr>
							<th>@item.CategoryID</th>
							<th>@item.CategoryName</th>
							<th>@item.Description</th>
							<th><a href="/Categories/Detay/@item.CategoryID" class="btn btn-primary">DETAY</a></th>
							<th><a href="/Categories/Guncelle/@item.CategoryID" class="btn btn-success">GÜNCELLE</a></th>
							<th><a href="/Categories/Sil/@item.CategoryID" class="btn btn-danger">SİL</a></th>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>








